<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Select Which Instrument You Want"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:id="@+id/Name" android:textSize="24sp" android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" android:layout_marginTop="123dp" android:fontFamily="@font/amatic_sc"
            android:textStyle="bold"/>
    <Button
            android:text="Flute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/FluteButton" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="275dp" style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:background="#68c2c8"
            android:fontFamily="@font/amatic_sc" android:typeface="normal" android:textSize="24sp"
            android:textColor="@color/Black" android:textAllCaps="false" android:textAlignment="center"
    />
    <Button
            android:text="French Horn "
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:id="@+id/FrenchButton" android:layout_centerHorizontal="true"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:background="#68c2c8"
            android:fontFamily="@font/amatic_sc" android:typeface="normal" android:textSize="24sp"
            android:textColor="@color/Black" android:textAllCaps="false" android:textAlignment="center"
            android:layout_alignParentBottom="true" android:layout_marginBottom="307dp"/>
    <Button
            android:text="Alto Sax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/AltoButton" android:layout_centerHorizontal="true"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:background="#68c2c8"
            android:fontFamily="@font/amatic_sc" android:typeface="normal" android:textSize="24sp"
            android:textColor="@color/Black" android:textAllCaps="false" android:textAlignment="center"
            android:layout_alignParentBottom="true" android:layout_marginBottom="247dp"/>
    <Button
            android:text="Clarinet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ClarinetButton" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="216dp" style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:background="#68c2c8"
            android:fontFamily="@font/amatic_sc" android:typeface="normal" android:textSize="24sp"
            android:textColor="@color/Black" android:textAllCaps="false" android:textAlignment="center"
    />

</RelativeLayout>